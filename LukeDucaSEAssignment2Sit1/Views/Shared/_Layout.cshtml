@using System.Diagnostics.Eventing.Reader
@using LukeDucaSEAssignment2Sit1.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (!Context.User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Login", "Login", "tbl_Users", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Register", "Register", "tbl_Users", new { area = "" }, new { @class = "navbar-brand" })

                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    }

                </div>
            </div>
        </div>
    }
    @if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("Writer"))
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Logout", "LogOff", "tbl_Users", new { area = "" }, new { @class = "navbar-brand" })


                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Create New Article", "SubmitArticle", "tbl_Article")</li>
                        <li>@Html.ActionLink("My Rejected Articles", "GetRejectedArticles", "tbl_Article")</li>
                        <li>@Html.ActionLink("Pending Articles Of Other Articles", "GetPEndingArticles", "tbl_Article")</li>
                    </ul>
                    }

                </div>
            </div>
        </div>
    }
    else if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("MediaManager"))
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Logout", "LogOff", "tbl_Users", new { area = "" }, new { @class = "navbar-brand" })


                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Accepted Articles By Reviewers", "GetAcceptedArticlesByReviewer", "tbl_Article")</li>
                    </ul>
                    }

                </div>
            </div>
        </div>
    }
    
    <div class="container body-content" style="margin: 40px">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
